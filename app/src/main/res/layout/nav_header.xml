<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_background_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/new_header_user_picture_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/nav_header_userpicture_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="19dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nav_header_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/nav_header_userpicture_imageview"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/nav_header_userpicture_imageview"
        android:text="TextView" />

    <TextView
        android:id="@+id/nav_header_useremail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/nav_header_username_textview"
        android:layout_alignBottom="@+id/nav_header_userpicture_imageview"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/nav_header_userpicture_imageview"
        android:text="TextView" />

</RelativeLayout>