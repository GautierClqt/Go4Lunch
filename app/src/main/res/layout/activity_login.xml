<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Activities.LoginActivity">

    

    <TextView
        android:id="@+id/login_activity_authentication_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez-vous authentifier pour utiliser l'application"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_login_authentication_button"/>

    <Button
        android:id="@+id/activity_login_authentication_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'AUTHENTIFIER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>